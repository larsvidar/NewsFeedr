<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/news_items_padding">

    <TextView
        android:id="@+id/news_section"
        style="@style/newsStoryStyle"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:textSize="@dimen/section_text"
        tools:text="Breaking News" />

    <TextView
        android:id="@+id/news_article"
        style="@style/newsStoryStyle"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/article_margin_bottom"
        android:maxLines="2"
        android:textSize="@dimen/article_text"
        tools:text="This is an article about some breaking news somewhere in the world. Only two lines are visible though!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_author"
            style="@style/newsStoryStyle"
            android:layout_width="wrap_content"
            android:width="@dimen/author_width"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/info_text"
            tools:text="By Stephen King" />

        <TextView
            android:id="@+id/news_date"
            style="@style/newsStoryStyle"
            android:layout_width="match_parent"
            android:gravity="end"
            android:textSize="@dimen/info_text"
            tools:text="Published 03.03.1975" />

    </LinearLayout>

</LinearLayout>